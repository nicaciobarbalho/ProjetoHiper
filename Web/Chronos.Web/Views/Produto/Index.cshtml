@using Chronos.Web.ViewModel.Produtos
@model ProdutoGridViewModel

<div class="page-header">
    <h1>Produtos</h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Preço</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Dados.Any())
                {
                    <tr>
                        <td colspan="3">
                            <p class="text-center">(não há produtos cadastrados)</p>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var produto in Model.Dados)
                    {
                        <tr>
                            <td>#@produto.Id</td>
                            <td>@produto.Nome</td>
                            <td>@($"{produto.Preco:C}")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>